<%= form_for @irradiance do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
    <%= f.label :direct, "Direct irradiance" %><br />
    <%= f.text_area :direct %><br />
  
    <%= f.label :diffuse, "Diffuse irradiance" %><br />
    <%= f.text_area :diffuse %><br />
  
    <%= f.label :postcode_id, "Postcode_id" %><br />
    <%= f.number_field :postcode_id %><br />
  
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
