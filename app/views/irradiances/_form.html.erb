<%= form_for @irradiance, :validate => true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  
    <%= f.label :direct %><br />
    <%= f.text_area :direct %>
  
    <%= f.label :diffuse %><br />
    <%= f.text_area :diffuse %>
  
    <%= f.label :postcode_id %><br />
    <%= f.number_field :postcode_id %>
  
  <%= f.submit %>
<% end %>
