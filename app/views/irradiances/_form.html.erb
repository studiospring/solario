<%= form_for @irradiance, :validate => true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
    <%= f.label :direct, "Direct irradiance" %><br />
    <%= f.text_area :direct %>
  
    <%= f.label :diffuse, "Diffuse irradiance" %><br />
    <%= f.text_area :diffuse %>
  
    <%= f.label :postcode_id, "Postcode_id" %><br />
    <%= f.number_field :postcode_id %>
  
  <%= f.submit %>
<% end %>
