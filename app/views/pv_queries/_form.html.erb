<%= form_for @pv_query, :validate => true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :postcode_id, 'Postcode', min: '221', max: '9999' %><br />
  <%= f.number_field :postcode_id %>
  <%= f.fields_for :panels do |builder| %>
    <%= render 'panel_fields', f: builder %>
  <% end %>
  <%= link_to 'Add panel', '', class: 'add_fields', remote: true %>
  <%= f.submit 'Get results' %>
<% end %>
