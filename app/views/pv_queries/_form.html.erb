<%= form_for @pv_query, :validate => true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :postcode %><br />
  <%= f.number_field :postcode %>
  <%= f.fields_for :panels do |builder| %>
    <%= render 'panel_fields', f: builder %>
  <% end %>
  <%= link_to 'Add panel', '', class: 'add_fields' %>
  <%= f.submit 'Get results' %>
<% end %>
