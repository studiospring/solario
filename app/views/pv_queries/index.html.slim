- content_for :body_id do
  |  index
= provide(:title, 'Queries' )
h1
  | Queries
table.table.table-striped
  caption
  colgroup
    col
    col
    col
    col
    col
    col
    col
  thead
    tr
      th
        | Postcode_id
      th
        | Panel count
      th
        | First panel
      th
