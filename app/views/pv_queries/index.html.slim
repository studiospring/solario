  tbody
    - @pv_queries.each do |pv_query|
      tr
        td
          = pv_query.postcode_id
        td
          = pv_query.panels.count
        - pv_query.panels.each do |panel|
          td
            | tilt:
            = panel.tilt
            | ° bearing:
            = panel.bearing
            | °
          - break
        td
          = l pv_query.created_at, format: :short
        td
          = link_to 'Show', pv_query
